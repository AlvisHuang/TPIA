@model TPIA.Common.DTO.ShareLink.EditShareLinkRequestDTO
@using TPIA.Common.Enumeration
@{
    ViewBag.Title = "EditShareLink";
    Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}
<p></p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>編輯 友好連結</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.LID)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.LID)
            @Html.ValidationMessageFor(model => model.LID)
        </div>
        <div class="editor-label">
            類別
        </div>
        <div class="editor-field">
            <select name="Category">
                @foreach (string item in System.Enum.GetNames(typeof(enLinkCategory)))
                {
                    string Name = string.Empty;
                    switch (item)
                    {
                        case "Education":
                            Name = "學術單位";
                            break;
                        case "PrintNews":
                            Name = "印刷新知";
                            break;
                        case "PrePrintInfo":
                            Name = "印前資訊";
                            break;
                        case "PrintInfo":
                            Name = "印刷資訊";
                            break;
                        case "ReviewPrintInfo":
                            Name = "印後資訊";
                            break;
                        case "MaterialInfo":
                            Name = "原料資訊";
                            break;
                        default:
                            break;
                    }
                    <option value="@item.ToString()" selected="@(item.ToString()==Model.Category.ToString())">@Name</option>
                }
            </select>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ImgUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ImgUrl)
            @Html.ValidationMessageFor(model => model.ImgUrl)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LinkUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LinkUrl)
            @Html.ValidationMessageFor(model => model.LinkUrl)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("回到列表", "BackEndIndex", "ShareLink")
</div>

