@model IEnumerable<TPIA.Common.DTO.Company.GetCompanyListReturnDTO>
@{
    ViewBag.Title = "BackEndIndex";
    Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}

<p></p>
<br />
<section id="service" class=" text-center ">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <div class="wow fadeInLeft panel panel-info" data-wow-delay="0.2s">
                    <div class="panel-heading">企業會員名錄 <div style="text-align:right;color:blue;">@Html.ActionLink("建立企業會員", "AddCompayInfo", "Company")</div></div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>公司代碼</th>
                                        <th>公司名稱</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="myTable">
                                    @foreach (TPIA.Common.DTO.Company.GetCompanyListReturnDTO item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.CID
                                            </td>
                                            <td>
                                                @*@item.CompanyName*@
                                                @Html.ActionLink(@item.CompanyName, "GetCompayDetail", "Company", new { CId = item.CID }, null)
                                            </td>

                                            <td>
                                                @Html.ActionLink("編輯公司資訊", "EditCompanyInfo", "Company", new { CId = item.CID }, null)
                                                @*@Html.ActionLink("刪除消息", "DeleteNews", "News", new { NewsId = item.NewsID }, null)*@
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
