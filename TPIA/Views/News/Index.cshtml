@model IEnumerable<TPIA.Common.DTO.News.GetNewsListReturnDTO>

@{
    ViewBag.Title = "最新消息";
}
<div id="_container" style="width:800px; overflow:hidden; margin:0 auto;">
    <h2>最新消息</h2>

    <table>
        <tr>            
            <th>
                @*@Html.DisplayNameFor(model => model.NewsCategory)*@
                <h4>消息分類</h4>
            </th>
            <th>
                <h4>標題</h4>
            </th>
            <th>
                <h4>建立時間</h4>
            </th>
            <th></th>
        </tr>

        @foreach (TPIA.Common.DTO.News.GetNewsListReturnDTO item in Model)
        {
            <tr>                
                <td>
                    @Html.DisplayFor(modelItem => item.NewsCategory)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.NewsTitle)*@
                    @Html.ActionLink(item.NewsTitle, "NewsContent", "News", new { NewsId = item.NewsID }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>                
            </tr>
        }

    </table>
</div>