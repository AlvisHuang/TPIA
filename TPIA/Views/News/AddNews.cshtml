@model TPIA.Common.DTO.News.AddNewsRequestDTO
@using TPIA.Common.Enumeration
@{
    ViewBag.Title = "AddNews";
    Layout = null;
}

<h2>AddNews</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>AddNewsRequestDTO</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <select name="Category">
            <option value="@enNewsCategory.Activity.ToString()">@enNewsCategory.Activity.ToString()</option>
            <option value="@enNewsCategory.Class.ToString()">@enNewsCategory.Class.ToString()</option>
            <option value="@enNewsCategory.Guild.ToString()">@enNewsCategory.Guild.ToString()</option>
            <option value="@enNewsCategory.Industry.ToString()">@enNewsCategory.Industry.ToString()</option>
            <option value="@enNewsCategory.Project.ToString()">@enNewsCategory.Project.ToString()</option>
            <option value="@enNewsCategory.Show.ToString()">@enNewsCategory.Show.ToString()</option>
        </select>

        <div class="editor-label">
            @Html.LabelFor(model => model.NewsContent)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewsContent)
            @Html.ValidationMessageFor(model => model.NewsContent)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
